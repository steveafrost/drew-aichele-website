<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Portfolio website for Drew Aichele.">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Drew Aichele" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
    <div class="container">
      <nav>
        <div class="row">
            <div class="column">DA</div>
            <div class="column column-50 column-offset-25">
              <li><%= link_to 'About', 'about' %></li>
              <li><%= link_to 'Social Work', 'social-work' %></li>
              <li><%= link_to 'Culinary', 'culinary' %></li>
              <li><%= link_to 'Performance', 'performance' %></li>
              <li><%= link_to 'Contact', 'contact' %></li>
            </div>
        </div>
      </nav>
      <%= yield %>
      <footer>
        Crafted by <a href="https://steveafrost.com">Steve Frost</a> | Copyright 2017
      </footer>
    </div>
  </body>
</html>